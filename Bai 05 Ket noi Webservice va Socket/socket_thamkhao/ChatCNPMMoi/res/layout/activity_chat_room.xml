<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ListView
        android:id="@+id/lstChatRoom"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnSendChatRoom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/edtChatRoom"
        android:background="#000000"
        android:divider="@null"
        android:drawSelectorOnTop="false" >

    </ListView>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lstUserList"
        android:layout_alignParentTop="true"
        android:text="Logout" />

    <ListView
        android:id="@+id/lstUserList"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/btnLogout"
        android:layout_toRightOf="@+id/lstChatRoom"
        android:divider="@null" >
    </ListView>

    <EditText
        android:id="@+id/edtChatRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btnSendChatRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/edtChatRoom"
        android:text="@string/Send" />

</RelativeLayout>